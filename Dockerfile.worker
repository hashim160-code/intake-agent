# Dockerfile for worker service (calling_agent only)
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    make \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set HuggingFace cache directories (same as voice/ agent)
ENV HF_HOME=/app/.cache/huggingface
ENV HF_HUB_CACHE=/app/.cache/huggingface/hub
ENV TRANSFORMERS_CACHE=/app/.cache/huggingface/transformers

# Create cache directories with proper permissions
RUN mkdir -p /app/.cache/huggingface/hub /app/.cache/huggingface/transformers

# Copy dependency files
COPY pyproject.toml ./

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir .

# Copy download script and download models (cached separately from app code)
COPY src/download_models.py ./src/download_models.py
RUN python src/download_models.py download-files

# Copy all source files (worker needs access to api_client, prompts, etc.)
COPY src/ ./src/

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV PORT=8080

# Expose port for health checks
EXPOSE 8080

# Run worker_server which includes both worker and health check HTTP server
CMD ["python", "src/worker_server.py"]